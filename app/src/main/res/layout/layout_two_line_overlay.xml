<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000">

    <!-- Helper Text -->
    <TextView
        android:id="@+id/helper_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="1. Frame Text\n2. Click ADD\n3. Scroll & Repeat\n4. Click DONE"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_marginBottom="100dp"/>

    <!-- Top Line (Start of Selection) - Green -->
    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#4CAF50"
        android:layout_marginTop="200dp" />

    <!-- Visual Handle for Top Line -->
    <ImageView
        android:id="@+id/handle_top"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_alignTop="@id/line_top"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-18dp"
        android:contentDescription="Drag Handle"
        android:tint="#4CAF50"/>

    <!-- Bottom Line (End of Selection) - Red -->
    <!-- Changed to VISIBLE so you can frame text immediately -->
    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#F44336"
        android:layout_marginTop="400dp"
        android:visibility="visible"/>

    <!-- Visual Handle for Bottom Line -->
    <!-- Changed to VISIBLE -->
    <ImageView
        android:id="@+id/handle_bottom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_alignTop="@id/line_bottom"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-18dp"
        android:contentDescription="Drag Handle"
        android:tint="#F44336"
        android:visibility="visible"/>

    <!-- Action Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <!-- CLOSE (X) -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@android:drawable/btn_default"
            android:contentDescription="Close Overlay"/>

        <!-- ADD PAGE (Camera) -->
        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="10dp"/>

        <!-- DONE (Check) -->
        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>