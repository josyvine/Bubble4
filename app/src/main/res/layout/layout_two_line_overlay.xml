<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000">

    <!-- LINES CONTAINER: This area captures touches to move the lines -->
    <RelativeLayout
        android:id="@+id/lines_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"> <!-- Margin to not overlap with bottom bar -->

        <!-- REMOVED: Helper TextView instructions deleted as per request -->

        <!-- Top Line (Start of Selection) - Green -->
        <View
            android:id="@+id/line_top"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#4CAF50"
            android:layout_marginTop="200dp" />

        <!-- Visual Handle for Top Line (Large touch target) -->
        <ImageView
            android:id="@+id/handle_top"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_alignTop="@id/line_top"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="-22dp"
            android:contentDescription="Drag Handle Top"
            android:tint="#4CAF50"/>

        <!-- Bottom Line (End of Selection) - Red -->
        <View
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#F44336"
            android:layout_marginTop="500dp"/>

        <!-- Visual Handle for Bottom Line -->
        <ImageView
            android:id="@+id/handle_bottom"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/btn_star_big_off"
            android:layout_alignTop="@id/line_bottom"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="-22dp"
            android:contentDescription="Drag Handle Bottom"
            android:tint="#F44336"/>

    </RelativeLayout>

    <!-- CONTROL BAR (Fixed at bottom) -->
    <LinearLayout
        android:id="@+id/control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#EE222222"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- CLOSE BUTTON (X Icon) -->
        <ImageView
            android:id="@+id/btn_close_overlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Close"/>

        <!-- ADD PAGE BUTTON (Blue) -->
        <!-- This triggers the screenshot/crop/accumulator logic -->
        <Button
            android:id="@+id/btn_add_page"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ADD PAGE"
            android:textStyle="bold"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- DONE BUTTON (Green) -->
        <!-- This finishes the accumulation and copies text -->
        <Button
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</RelativeLayout>